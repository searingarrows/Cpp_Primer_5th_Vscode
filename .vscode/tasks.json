{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "presentation": {
                "echo": true,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true
            },
            "command": "g++ -g ${file} -o ${workspaceFolder}/out/Linux/${relativeFile}.out -I ${workspaceFolder}/tool/",
            "group":{
                "kind": "build",
                "isDefault": true
            },
            "windows":{
                "command": "g++",
                "args": [
                    "-g",
                    "${file}",
                    "--std=c++11",
                    "-o",
                    "${workspaceFolder}/out/Windows/${relativeFile}.exe",
                    "-I",
                    "${workspaceFolder}/tool/"
                ]
            }
        }
    ]
}